<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Pokedex" parent="android:Theme.Material.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:colorPrimary">@color/purple_500</item>
        <!-- Secondary brand color. -->
        <item name="android:colorSecondary" tools:targetApi="n_mr1">@color/teal_200</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Pokedex.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme.Pokedex.AppBarOverlay" parent="android:ThemeOverlay.Material.Dark.ActionBar" />

    <style name="Theme.Pokedex.PopupOverlay" parent="android:ThemeOverlay.Material.Light" />
</resources>